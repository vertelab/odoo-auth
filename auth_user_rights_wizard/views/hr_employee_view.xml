<odoo>
    <data>

        <record id="view_access_right_hr_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="work_phone" position="after">
                    <field name="user_groups" widget="many2many_tags"/>
                </field>
            </field>
        </record>

        <record id="view_access_right_hr_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="user_groups" widget="many2many_tags"/>
                </field>
            </field>
        </record>


        <record id="view_access_right_wizard" model="ir.ui.view">
            <field name="name">hr.employee.user.right.form</field>
            <field name="model">hr.employee.user.right</field>
            <field name="arch" type="xml">
                <form string="Access Rights">
                    <group>
                        <field name="employee_id" invisible="1"/>
                        <field name="group_id" required="1" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button string="Assign" type="object" name="action_assign_rights" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="hr_employee_action_user_rights" model="ir.actions.act_window">
            <field name="name">Assign User Rights</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.user.right</field>
            <field name="domain">[('id','in',active_ids)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_access_right_wizard"/>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="groups_id" eval="[(4, ref('base_user_groups_dafa.group_dafa_superadmin'))]"/>
        </record>
    </data>
</odoo>

<odoo>
    <data>

        <record id="view_access_right_hr_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="work_phone" position="after">
                    <field name="user_rights" widget="many2many_tags"/>
                </field>
            </field>
        </record>


        <record id="view_access_right_wizard" model="ir.ui.view">
            <field name="name">hr.employee.user.right.form</field>
            <field name="model">hr.employee.user.right</field>
            <field name="arch" type="xml">
                <form string="Access Rights">
                    <group>
                        <field name="group_id" required="1"/>
                    </group>
                    <group>
                        <field name="model_access" widget='one2many' nolabel="1">
                            <tree editable="top">
                                <field name="name"/>
                                <field name="model_id"/>
                                <field name="perm_read"/>
                                <field name="perm_write"/>
                                <field name="perm_create"/>
                                <field name="perm_unlink"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Assign" type="object" name="action_assign_rights" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="hr_employee_action_user_rights" model="ir.actions.act_window">
            <field name="name">Assign User Rights</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.user.right</field>
            <field name="domain">[('id','in',active_ids)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_access_right_wizard"/>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
        </record>
    </data>
</odoo>

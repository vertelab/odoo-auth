            <field name="group_id" ref="base.group_user"/>
            <field name="saml_id" ref="provider_ciam"/>
            <field name="saml_attribute">roles</field>
            <field name="operator">equals</field>
        </record>
        -->
        <!-- DAFA Admin-användare -->
        <record id="group_map_user" model="auth.saml.provider.group_mapping">
            <field name="value">apps/DAFA/XXXXXXXX/DAFA_SUPER_ADMIN</field>
            <field name="group_id" ref="base_user_groups_dafa.group_dafa_org_admin_write"/>
            <field name="saml_id" ref="provider_ciam"/>
            <field name="saml_attribute">roles</field>
            <field name="operator">equals</field>
        </record>
    </data>
</odoo>

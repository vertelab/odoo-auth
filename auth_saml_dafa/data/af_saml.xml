<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record id="provider_ciam" model="auth.saml.provider">
            <field name="name">Logga in</field>
            <field name="css_class">dafa-saml-login</field>
            <field name="matching_attribute">personnummer</field>
            <field name="create_user" eval="False"/>
            <field name="settings">{
                "strict": True,
                "debug": True,
                "security": {
                'authnRequestsSigned': False,
                'requestedAuthnContext': False,
                },
                }
            </field>
            <field name="idp_metadata"/>
            <field name="sp_metadata"/>
            <field name="sp_pkey"/>
        </record>
        <!-- DAFA Coach-användare -->
        <!-- What group should this be?. It looks superfluous. -->

<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_users_form" model="ir.ui.view">
      <field name="name">res.users.form</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form" />
      <field name="arch" type="xml">
        <notebook colspan="4" position="inside">
          <page string="OTP">
            <group>
              <field name="otp_secret" />
              <field name="otp_type" />
              <field name="otp_counter" attrs="{'invisible':[('otp_type', '==', 'time')]}" />
              <field name="otp_period" attrs="{'invisible':[('otp_type', '==', 'count')]}" />
              <field name="otp_digits" />
              <field name="otp_uri" />
              <field name="otp_qrcode" widget="image" nolabel="1" />
            </group>
          </page>
        </notebook>
      </field>
    </record>
    <record id="view_users_form_simple_modif" model="ir.ui.view">
      <field name="name">res.users.preferences.form.otp</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form_simple_modif" />
      <field name="arch" type="xml">
        <footer position="before">
          <group string="OTP" name="otp" col="6">
            <group>
                <div>
                <div>Configure code</div>
                <field name="otp_qrcode" widget="image" nolabel="1" />
                 <field name="otp_uri" nolabel="1" />
                </div>
            </group>
            <group>
                <div>
                <div>Android App</div>
                 <field name="otp_qrandroid" widget="image" nolabel="1" />
                 <field name="otp_urlandroid" nolabel="1" />
                 </div>
            </group>
            <group>
                <div>
                <div>Iphone App</div>
                 <field name="otp_qrios" widget="image" nolabel="1" />
                 <field name="otp_urlios" nolabel="1" />
                 </div>
            </group>
          </group>
        </footer>
      </field>
    </record>
    <!-- login form -->
    <template id="login" inherit_id="web.login">
      <xpath expr="//div[@class='form-group field-password']" position="before">
        <div class="form-group field-otp-code">
          <label for="otp_code" class="control-label">Verification code</label>
          <input type="text" name="otp_code" id="otp_code" class="form-control" required="required" t-att-autofocus="'autofocus' if login else None" />
        </div>
      </xpath>
<!--
      <xpath expr="//form[@class='oe_login_form']" position="attributes">
        <attribute name="t-attf-action">/web/otp-login{{ '?debug' if debug else '' }}</attribute>
      </xpath>
-->
    </template>
    
    
            <!-- Email template for reset password -->
        <record id="auth_signup.reset_password_email" model="email.template">
            <field name="name">Reset Password</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from"><![CDATA["${object.company_id.name|safe}" <${(object.company_id.email or user.email)|safe}>]]></field>
            <field name="email_to">${object.email|safe}</field>
            <field name="subject">Password reset</field>
            <field name="body_html"><![CDATA[
<p>A password reset was requested for the Odoo account linked to this email.</p>

<p>You may change your password by following <a href="${object.signup_url}">this link</a>.</p>
<table>
<tr>
    <td>This is your QR-code for one time password:<br/>
        <img src="data:image/png;base64,${object.otp_qrcode}"></td>
    <td>Android App:<br/>
        <img src="data:image/png;base64,${object.otp_qrandroid}"></td>
    <td>Iphone App:<br/>
        <img src="data:image/png;base64,${object.otp_qrios}"></td>

</tr>
</table>
</p>
<p>Note: If you do not expect this, you can safely ignore this email.</p>]]></field>
        </record>

        <!-- Email template for new users -->
        <record id="auth_signup.set_password_email" model="email.template">
            <field name="name">Odoo Enterprise Connection</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from"><![CDATA["${object.company_id.name|safe}" <${(object.company_id.email or user.email)|safe}>]]></field>
            <field name="email_to">${object.email|safe}</field>
            <field name="subject"><![CDATA[${object.company_id.name} invitation to connect on Odoo]]></field>
            <field name="body_html">
                <![CDATA[
                    <p>
                        ${object.name},
                    </p>
                    <p>
                        You have been invited to connect to "${object.company_id.name}" in order to get access to your documents in Odoo.
                    </p>
                    <p>
                        To accept the invitation, click on the following link:
                    </p>
                    <ul>
                        <li><a href="${object.signup_url}">Accept invitation to "${object.company_id.name}"</a></li>
                    </ul>
                    <p>
                        Thanks,
                    </p>
                    <pre>
--
${object.company_id.name or ''}
${object.company_id.email or ''}
${object.company_id.phone or ''}
                    </pre>
                ]]>
            </field>
        </record>
        <record model="ir.values" id="send_password_reminder">
            <field name="model_id" ref="model_res_users"/>
            <field name="name">Send Password reminder</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">res.users</field>
        </record>
        
        <record model="ir.actions.server" id="send_password_reminder_server">
            <field name="name">Send Password Reminder</field>
            <field name="model_id" ref="model_res_users"/>
            <field name="state">code</field>
            <field name="type">ir.actions.server</field>
            <field name="code">self.pool['res.users'].action_reset_password(cr,uid,context.get('active_ids', []),context)</field>
            <field name="condition">True</field>
            <field name="menu_ir_values_id" ref="send_password_reminder"/>
        </record>
        
        <record model="ir.values" id="send_password_reminder">
            <field name="value" eval="'ir.actions.server,%s' % ref('send_password_reminder_server')"/>
        </record>
    
  </data>
</openerp>